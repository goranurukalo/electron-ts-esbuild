{
  "name": "electron-ts-esbuild",
  "version": "1.0.0",
  "description": "Secure template for electron applications with some nice DX",
  "author": "Goran Urukalo",
  "main": "build/main.bundle.js",
  "keywords": [
    "electron",
    "secure",
    "esbuild",
    "typescript",
    "webpack",
    "hot reload",
    "template",
    "eslint",
    "prettier",
    "husky",
    "jest"
  ],
  "homepage": "https://github.com/goranurukalo/electron-ts-esbuild#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goranurukalo/electron-ts-esbuild.git"
  },
  "bugs": {
    "url": "https://github.com/goranurukalo/electron-ts-esbuild/issues"
  },
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "prepare": "run-p prepare:*",
    "start": "electron .",
    "dev": "yarn clear && cross-env NODE_ENV=development ELECTRON_ENABLE_LOGGING=true run-p dev:*",
    "build": "yarn clear && yarn lint:ts && cross-env NODE_ENV=production run-p build:main build:renderer",
    "package": "electron-builder --config electron-builder.yml",
    "release": "yarn build && yarn package",
    "test": "run-s test:*",
    "lint": "run-p lint:*",
    "clear": "run-p clear:*",
    "clear:dist": "rimraf dist",
    "clear:build": "rimraf build",
    "clear:output": "rimraf output",
    "dev:main": "webpack --config scripts/webpack/main.js",
    "dev:renderer": "webpack serve --config scripts/webpack/renderer.js",
    "dev:watch-ts": "yarn lint:ts --watch --preserveWatchOutput",
    "build:main": "yarn dev:main",
    "build:renderer": "webpack --config scripts/webpack/renderer.js",
    "test:code": "rimraf output/jest && cross-env NODE_ENV=test jest --coverage",
    "test:code-duplication": "rimraf output/duplicate-code && echo jscpd .",
    "lint:js": "eslint . --ext .js,.jsx,.ts,.tsx --ignore-path .eslintignore --quiet",
    "lint:ts": "tsc --noemit",
    "lint:css": "echo todo",
    "package:win": "yarn package -w",
    "package:darwin": "yarn package -m",
    "package:linux": "yarn package -l",
    "prepare:git": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "26.0.23",
    "@types/node": "^15.12.1",
    "@typescript-eslint/eslint-plugin": "4.26.0",
    "cross-env": "7.0.3",
    "electron": "13.1.1",
    "electron-builder": "22.11.5",
    "esbuild-loader": "2.13.1",
    "eslint": "7.28.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-plugin-import": "2.23.4",
    "html-webpack-plugin": "5.3.1",
    "husky": "^6.0.0",
    "jest": "27.0.4",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.3",
    "typescript": "4.3.2",
    "webpack": "5.38.1",
    "webpack-cli": "4.7.0",
    "webpack-dev-server": "3.11.2"
  }
}
